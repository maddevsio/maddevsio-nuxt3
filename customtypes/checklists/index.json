{
	"id": "checklists",
	"label": "Checklists",
	"repeatable": true,
	"status": true,
	"format": "custom",
	"json": {
		"Main": {
			"uid": {
				"type": "UID",
				"config": {
					"label": "UID"
				}
			},
			"publish_date": {
				"type": "Date",
				"config": {
					"label": "publish_date"
				}
			},
			"released": {
				"type": "Boolean",
				"config": {
					"placeholder_false": "Стейджинге",
					"placeholder_true": "Продакшине",
					"default_value": false,
					"label": "Страница доступна на"
				}
			},
			"body": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {
						"tag_cloud_slice": {
							"type": "SharedSlice"
						},
						"title_and_description": {
							"type": "SharedSlice"
						},
						"cta_banner_slice": {
							"type": "SharedSlice"
						},
						"writeup_list_slice": {
							"type": "SharedSlice"
						},
						"start_screen": {
							"type": "SharedSlice"
						},
						"spacer_slice": {
							"type": "SharedSlice"
						},
						"process_slice": {
							"type": "SharedSlice"
						},
						"card_with_colored_title": {
							"type": "SharedSlice"
						},
						"posts_section_slice": {
							"type": "SharedSlice"
						},
						"button_slice": {
							"type": "SharedSlice"
						},
						"form_slice": {
							"type": "SharedSlice"
						}
					}
				}
			}
		},
		"SEO": {
			"meta_title": {
				"type": "Text",
				"config": {
					"label": "Meta Title"
				}
			},
			"meta_description": {
				"type": "Text",
				"config": {
					"label": "Meta Description"
				}
			},
			"og_image": {
				"type": "Image",
				"config": {
					"constraint": {
						"width": 1200,
						"height": 630
					},
					"thumbnails": [],
					"label": "OG Image"
				}
			},
			"schema_org_snippets": {
				"type": "Group",
				"config": {
					"fields": {
						"single_snippet": {
							"type": "StructuredText",
							"config": {
								"single": "preformatted",
								"label": "Single snippet"
							}
						}
					},
					"label": "schema.org snippets"
				}
			}
		},
		"Header Plate": {
			"header_plate_text": {
				"type": "Text",
				"config": {
					"label": "Header Plate Text"
				}
			},
			"header_plate_button_text": {
				"type": "Text",
				"config": {
					"label": "Header Plate Button Text"
				}
			},
			"header_plate_link": {
				"type": "Text",
				"config": {
					"label": "Header Plate Link",
					"placeholder": "/blog/"
				}
			},
			"header_plate_background_color": {
				"type": "Select",
				"config": {
					"options": ["blue", "purple", "orange", "green", "blue-green"],
					"label": "Header Plate Background Color",
					"placeholder": "requires choice"
				}
			}
		},
		"Main Page Data": {
			"title": {
				"type": "Text",
				"config": {
					"label": "Title"
				}
			},
			"description": {
				"type": "Text",
				"config": {
					"label": "Description"
				}
			},
			"background_image": {
				"type": "Image",
				"config": {
					"constraint": {},
					"thumbnails": [],
					"label": "Background Image"
				}
			}
		},
		"Card in Main Page Data": {
			"card_title": {
				"type": "Text",
				"config": {
					"label": "Card Title"
				}
			},
			"card_description": {
				"type": "Text",
				"config": {
					"label": "Card Description"
				}
			},
			"card_color_in_main_page": {
				"type": "Select",
				"config": {
					"options": ["yellow", "white", "black", "red", "purple", "orange", "green", "blue"],
					"default_value": "yellow",
					"label": "Card color in main page",
					"placeholder": "default: yellow"
				}
			},
			"card_image": {
				"type": "Image",
				"config": {
					"constraint": {},
					"thumbnails": [],
					"label": "Card Image"
				}
			}
		}
	}
}
