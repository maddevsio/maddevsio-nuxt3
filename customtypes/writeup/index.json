{
	"id": "writeup",
	"label": "Writeup",
	"repeatable": true,
	"status": true,
	"format": "custom",
	"json": {
		"Main": {
			"uid": {
				"type": "UID",
				"config": {
					"label": "Page URL"
				}
			},
			"title": {
				"type": "Text",
				"config": {
					"label": "Title",
					"placeholder": "Main title if needed"
				}
			},
			"description": {
				"type": "Text",
				"config": {
					"label": "Description",
					"placeholder": "Description if needed"
				}
			},
			"image": {
				"type": "Image",
				"config": {
					"constraint": {},
					"thumbnails": [],
					"label": "Image"
				}
			},
			"created_date": {
				"type": "Date",
				"config": {
					"label": "Created date",
					"placeholder": "Created Date"
				}
			},
			"updated_date": {
				"type": "Date",
				"config": {
					"label": "Updated date",
					"placeholder": "Updated date"
				}
			},
			"author": {
				"type": "Link",
				"config": {
					"select": "document",
					"customtypes": ["author"],
					"label": "Author",
					"placeholder": "Choose author"
				}
			},
			"released": {
				"type": "Boolean",
				"config": {
					"placeholder_false": "На стейджинге",
					"placeholder_true": "На продакшине",
					"default_value": false,
					"label": "Released"
				}
			},
			"body": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {
						"comparison_slice": {
							"type": "SharedSlice"
						},
						"spacer_slice": {
							"type": "SharedSlice"
						},
						"title_and_description": {
							"type": "SharedSlice"
						},
						"start_screen": {
							"type": "SharedSlice"
						},
						"button_slice": {
							"type": "SharedSlice"
						},
						"writeup_text_slice": {
							"type": "SharedSlice"
						},
						"image_with_caption": {
							"type": "SharedSlice"
						},
						"post_authors_slice": {
							"type": "SharedSlice"
						},
						"divider_slice": {
							"type": "SharedSlice"
						},
						"tag_cloud_slice": {
							"type": "SharedSlice"
						},
						"cta_banner_slice": {
							"type": "SharedSlice"
						},
						"table_slice": {
							"type": "SharedSlice"
						}
					}
				}
			}
		},
		"SEO": {
			"meta_title": {
				"type": "Text",
				"config": {
					"label": "Meta Title"
				}
			},
			"meta_description": {
				"type": "Text",
				"config": {
					"label": "Meta Description"
				}
			},
			"schema_org_snippets": {
				"type": "Group",
				"config": {
					"fields": {
						"single_snippet": {
							"type": "StructuredText",
							"config": {
								"single": "preformatted",
								"allowTargetBlank": true,
								"label": "Single snippet"
							}
						}
					},
					"label": "schema.org snippets"
				}
			},
			"og_image": {
				"type": "Image",
				"config": {
					"constraint": {
						"width": 1200,
						"height": 630
					},
					"thumbnails": [],
					"label": "OG Image"
				}
			}
		},
		"Header Plate": {
			"header_plate_text": {
				"type": "Text",
				"config": {
					"label": "Header Plate Text"
				}
			},
			"header_plate_button_text": {
				"type": "Text",
				"config": {
					"label": "Header Plate Button Text"
				}
			},
			"header_plate_link": {
				"type": "Text",
				"config": {
					"label": "Header Plate Link",
					"placeholder": "/digest/"
				}
			},
			"header_plate_background_color": {
				"type": "Select",
				"config": {
					"options": ["blue", "purple", "orange", "green", "blue-green"],
					"label": "Header Plate Background Color",
					"placeholder": "requires choice"
				}
			}
		}
	}
}
